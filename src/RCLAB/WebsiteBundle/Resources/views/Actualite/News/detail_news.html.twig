{% extends "base.html.twig" %}

{% block body %}

    <h3>Detail de la news {{ news.news }}</h3>

    <div>
        <p>Publiée le {{ news.debutPublication|date('d/m/Y H:i') }}</p>
        <br/>
        <p>Description de l'évènement :</p>
        <p>{{ news.description }}</p>

        {% if news.lien is not null %}
            <p><a href="{{ news.lien }}">{{ news.lien }}</a></p>
            <br/>
        {% endif %}
    </div>
    {% if news.image is not null %}
        <div>
            <img src="{{ asset('uploads/images/'~news.image) }}"/>
        </div>
    {% endif %}
{% endblock %}
