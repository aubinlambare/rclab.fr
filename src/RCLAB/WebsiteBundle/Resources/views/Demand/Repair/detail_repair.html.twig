{% extends "base.html.twig" %}

{% block body %}
    <h3>{{ repair.objet }}</h3>

    <p>Date et heure de la demande : {{ repair.dateDemande|date('d/m/Y à H:i') }}</p>

    {% if repair.etat == 'demande' %}
        <p>
            Disponibilités du demandeur :<br/>
            {{ repair.disponibiliteDemandeur }}
        </p>
    {% elseif repair.etat == 'en attente' %}
        <p>Date et heure du rendez-vous : {{ repair.debut|date('d/m/Y à H:i') }}</p>
    {% endif %}
    {% if repair.responsable is not null %}
        <p>Responsable de la réparation : {{ repair.responsable.firstName }} {{ repair.responsable.lastName }}</p>
    {% endif %}


    <p>
        Description : <br/>
        {{ repair.description }}
    </p>
{% endblock %}