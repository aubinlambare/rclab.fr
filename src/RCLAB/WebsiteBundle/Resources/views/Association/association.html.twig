{% extends "base.html.twig" %}
{% block body %} 

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/rclabwebsite/css/association.css') }}" />
{% endblock %}

<div class="container">
    <!-- FIRST ROW OF BLOCKS -->     
    <div class="row">
      
      <!-- USER PROFILE BLOCK -->
        {% set tmp = 0 %}
        {% set iteration = 0 %}
        {% for users in personnes %} 
            {% set tmp = tmp + 1 %}
        {% endfor %}
        {% for users in personnes %} 
            {% set iteration = iteration + 1 %}  
            {% if users.fonction is not null %}
                {% if tmp == 5 and iteration == 4 %}
                    <div class="col-lg-offset-2 col-sm-offset-2 col-sm-4 col-md-4 col-lg-4">
                {% else %}
                    <div class="col-sm-4 col-md-4 col-lg-4">
                {% endif %}
                    <div class="dash-unit">
                        <hr>
                        <div class="thumbnail">
                            {% if users.photo is not null %}
                                <img src="{{ asset('uploads/images/'~users.photo) }}" class="img-circle" >
                            {% endif %}    
                        </div><!-- /thumbnail -->
                            <h1>{{ users['firstName'] }} {{ users.lastName }}</h1>
                            <h3><font color="red"> {{ users['fonction']['fonction']|upper }}</h3>
                        <br>
                        <div class="info-user"> 
                            <span>
                                <center>    
                                    <h4>{{ users['presentation'] }}</h4>
                                </center>
                            </span>
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    
    </div> 

    <div class="col-lg-offset-1 col-sm-offset-1 col-sm-10 col-lg-10 ">
        <div class="dash-unit">
            <hr>
                <center>
                    <p><h7><font color="red"> L'association </h7></p>
                    <p><h6>{{ descriptionAssociation}}</p></h6>
                </center>
        </div>
    </div>
</body></html>

{% endblock %}