{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:400,100,300,500">
<link rel="stylesheet" href="{{ asset('bundles/rclabuser/css/form-registration.css') }}" />
<link rel="stylesheet" href="{{ asset('bundles/rclabuser/css/registration.css') }}" />

<div class="registration-body" href="{{ asset('bundles/rclabuser/images/registration.jpg') }}">
    <!-- Top content -->
    <div class="top-content">
        <div class="inner-bg">
            <div class="container">
                <div class="row">
                    <div class="col-sm-8 col-sm-offset-2">
                        <h1><strong>Bon retour parmi nous !</strong></h1>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6 col-sm-offset-3 form-box">
                        <div class="form-top">
                            <div class="form-top-left">
                                <h3>Connectez-vous à votre espace personnel :</h3>
                            </div>
                            <div class="form-top-right">
                                <i class="fa fa-lock"></i>
                            </div>
                        </div>
                        <div class="form-bottom">
                            <form role="form" action="{{ path("fos_user_security_check") }}" method="post" class="registration-form">
                                {% if csrf_token %}
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                                {% endif %}
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-user" aria-hidden="true"></i></span>
                                        <label class="sr-only" for="form-user-name"></label>
                                        <input type="text" class="form-user-name form-control" placeholder="{{ 'security.login.username'|trans }} ou adresse mail..."
                                               id="form-user-name" name="_username" required="required" autocomplete="username" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-lock" aria-hidden="true"></i></span>
                                        <label class="sr-only" for="form-password"></label>
                                        <input type="password" class="form-password form-control" placeholder="{{ 'security.login.password'|trans }}..."
                                               id="form-password" name="_password" required="required" autocomplete="current-password" />
                                    </div>
                                </div>
                                <button type="submit" id="_submit" class="btn"><strong>{{ 'security.login.submit'|trans }}</strong></button>
                            </form>
                            <div class="form-under">
                                <div class="form-under-left">
                                    <a class="forgetPassword" href="{{  path('fos_user_resetting_request') }}">Mot de passe oublié</a>
                                </div>
                                <div class="form-under-right">
                                    <a class="notRegistered" href="{{  path('rclab_user_registration_register') }}">S'inscrire</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
