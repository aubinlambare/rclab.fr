{% trans_default_domain 'FOSUserBundle' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/rclabuser/css/form-user.css') }}" />
{% endblock %}

<div class="registration-body" href="{{ asset('bundles/rclabuser/images/registration.jpg') }}">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-8 col-xs-8 col-lg-offset-3 col-md-offset-3 col-sm-offset-2 col-xs-offset-2 form-box">
                <div class="form-top">
                    <div class="form-top-left">
                        <h1>RÃ©initialiser le mot de passe :</h1>
                    </div>
                    <div class="form-top-right">
                        <i class="fa fa-lock"></i>
                    </div>
                </div>
                <div class="form-bottom">
                    <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-envelope" aria-hidden="true"></i></span>
                                <input type="text" id="username" placeholder="{{ 'resetting.request.username'|trans }}" name="username" required="required" />
                            </div>
                        </div>
                        <input class="btn btn-primary" type="submit" value="{{ 'resetting.request.submit'|trans }}" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

{% block javascripts %}
    {% javascripts
        '@RCLABUserBundle/Resources/public/js/jquery.backstretch.min.js'
        '@RCLABUserBundle/Resources/public/js/registration.js' %}
        <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
{% endblock %}
